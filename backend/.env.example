# Database Configuration
DATABASE_URL="postgresql://chainquest:password@localhost:5432/chainquest"

# Server Configuration
NODE_ENV="development"
API_PORT=8000
API_HOST="localhost"
CORS_ORIGIN="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Blockchain Configuration
BASE_RPC_URL="https://sepolia.base.org"
BASE_CHAIN_ID="84532"
PRIVATE_KEY="your-private-key-here"

# Contract Addresses (filled after deployment)
QUEST_FACTORY_ADDRESS=""
REWARD_POOL_ADDRESS=""
VERIFICATION_ORACLE_ADDRESS=""
ACHIEVEMENT_NFT_ADDRESS=""
GOVERNANCE_TOKEN_ADDRESS=""

# IPFS Configuration
IPFS_PROJECT_ID="your-ipfs-project-id"
IPFS_PROJECT_SECRET="your-ipfs-project-secret"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# External Services
WEBHOOK_SECRET="your-webhook-secret"
EMAIL_SERVICE_API_KEY="your-email-service-key"

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# File Upload
MAX_FILE_SIZE="10485760"  # 10MB
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Cron Jobs
QUEST_EXPIRATION_CHECK="0 */6 * * *"  # Every 6 hours
VERIFICATION_TIMEOUT_CHECK="0 */2 * * *"  # Every 2 hours
DISPUTE_DEADLINE_CHECK="0 * * * *"  # Every hour
